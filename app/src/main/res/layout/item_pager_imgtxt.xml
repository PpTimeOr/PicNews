<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/index_textview_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/index_textview_margintop_pager"
        android:textSize="@dimen/index_textview_textsize_pager"
        android:gravity="center" />

    <com.droidroid.imageloaderdemo.view.VerticalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/index_textview_pager">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iamge_imageview_pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="@dimen/image_imageview_marginbottom_pager"
                android:layout_marginLeft="@dimen/image_imageview_marginleft_pager"
                android:layout_marginRight="@dimen/image_imageview_marginright_pager"
                android:layout_marginTop="@dimen/image_imageview_margintop_pager" />

            <com.nimos.widget.CYTextView
                xmlns:cy="http://schemas.android.com/apk/res-auto"
                android:id="@+id/description_textview_pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/description_textview_marginbottom_pager"
                android:layout_marginLeft="@dimen/description_textview_marginleft_pager"
                android:layout_marginRight="@dimen/description_textview_marginright_pager"
                android:layout_marginTop="@dimen/description_textview_margintop_pager"
                cy:mytextColor="@color/description_textview_color_pager"
                cy:mytextSize="@dimen/description_textview_textsize_pager" />

        </LinearLayout>


    </com.droidroid.imageloaderdemo.view.VerticalScrollView>

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
</RelativeLayout>